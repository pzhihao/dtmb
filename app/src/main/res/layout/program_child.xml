<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TableLayout
        android:background="#ffcccccc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">
        <TableRow
            android:background="#ffffcc99"
            android:layout_margin="0.5dp"
            >
            <TextView

                android:text="转播节目："
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_span="3"
                android:gravity="center"
                android:id="@+id/program_name"
                android:text="内容"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:background="#ffffcc99"
            android:layout_margin="0.5dp"
            >
            <TextView
                android:text="编制单位："
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:gravity="center"
                android:id="@+id/program_danwei"
                android:text="安化县"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="编制用户："
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:gravity="center"
                android:text="tzj"
                android:id="@+id/program_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:background="#ffffcc99"
            android:layout_margin="0.5dp"
            >
            <TextView
                android:text="节目名称："
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:gravity="center"
                android:text="转播中央广播"
                android:id="@+id/program_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="播出周期："
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:gravity="center"
                android:id="@+id/program_zhouqi"
                android:text="每周日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:background="#ffffcc99"
            android:layout_margin="0.5dp"
            >
            <TextView
                android:text="播出时间："
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:gravity="center"
                android:text="00:24:00"
                android:id="@+id/program_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="停播时间："
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:gravity="center"
                android:text="00:26:00"
                android:id="@+id/program_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:background="#ffffcc99"
            android:layout_margin="0.5dp"
            >
            <TextView
                android:layout_span="2"
                android:text="状态："
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_span="2"
                android:gravity="center"
                android:text="在用"
                android:id="@+id/program_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
    </TableLayout>

</LinearLayout>